<odoo>
    <record id="order_tag_tree" model="ir.ui.view">
        <field name="name">Order Tag Tree</field>
        <field name="model">order_tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>
    <record id="order_tag_form" model="ir.ui.view">
        <field name="name">Order Tag Form</field>
        <field name="model">order_tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe-title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group string="Tag Information">
                            <field name="color"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="order_tag_action" model="ir.actions.act_window">
        <field name="name">Order Tag action</field>
        <field name="res_model">order_tag</field>
    </record>
    <menuitem
        id="order_tag_menu"
        name="Order Tags"
        parent="app_shipping_Configuration_menu"
        action="order_tag_action"
    />
</odoo>